<!-- index.wxml -->
<view class="choice">
  <!-- 搜索 -->
  <view class="choiceTop">
    <view class="busi" bindtap='goBusiness'>
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/shoplist/busi.png" mode="widthFix"/>
    </view>
    <form>
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/shoplist/fdj.png" mode="widthFix"></image>
      <input type="search" placeholder="点击搜索" id="keyword" bindblur="searchGoods" />
    </form>
    <view class="map" bindtap='goMap'>
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/shoplist/map.png" mode="widthFix"/>
    </view>
  </view>
</view>
<!-- 乐活 -->
<view class="lehuo">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
