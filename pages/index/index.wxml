  <!-- 精彩 -->
  <view class="lehuo_teach">
    <swiper class="teach_banner" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" display-multiple-items="1.4">
      <block wx:for="{{imgUrlsTwo}}" wx:key="item">
        <swiper-item>
          <image src="{{item}}" mode="widthFix" />
        </swiper-item>
      </block>
    </swiper>
    <view class="more" bindtap="goActiveList">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/more.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- 热门 -->
  <view class="lehuo_space">
    <swiper class="space_banner" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" display-multiple-items="3.4">
      <block wx:for="{{imgUrlsThree}}" wx:key="item">
        <swiper-item>
          <image src="{{item}}" mode="widthFix" />
        </swiper-item>
      </block>
    </swiper>
    <view class="more" ng-click="goTeachList()">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/more.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- 运动 -->
  <view class="lehuo_sport">
    <swiper class="sport_banner" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" display-multiple-items="3.2">
      <block wx:for="{{imgUrlsfour}}" wx:key="item">
        <swiper-item>
          <image src="{{item}}" mode="widthFix" />
        </swiper-item>
      </block>
    </swiper>
    <view class="more" ng-click="goTeachList()">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/more.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- /* 列表 */
