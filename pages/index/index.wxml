    <!-- 活动列表 -->
    <view class="Alist">
      <!-- 活动 -->
      <view class="Aitem" wx:for="{{hotActiveList.all}}" bindtap="goActiveInfo" data-item="{{item}}" wx:if="{{item.activityType<4 }}">
        <view class="Alist_Aitem_item" wx:if="{{item.activityType==0 || item.activityType==2}}">
          <view class="left">
            <image src="{{item.coverUrl}}" mode="widthFix"></image>
          </view>
          <view class="right">
