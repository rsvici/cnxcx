      <image src="http://www.appsun.com.cn/www/fy/changning/image/lehuo/16.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- 精彩 -->
  <view class="lehuo_teach">
    <swiper class="teach_banner" interval="{{interval}}" duration="{{duration}}" circular="{{!circular}}" display-multiple-items="1.4">
      <block wx:for="{{hotActiveList.banner1}}" wx:key="">
        <swiper-item bindtap="goActiveInfo" data-item="{{item}}">
          <image src="{{item.activityUrl}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
    <view class="more" bindtap="goActiveList">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/more.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- 热门 -->
  <view class="lehuo_space">
    <swiper class="space_banner" interval="{{interval}}" duration="{{duration}}" circular="{{!circular}}" display-multiple-items="3.4">
      <block wx:for="{{hotActiveList.banner2}}" wx:key="item">
        <swiper-item bindtap="goActiveInfo" data-item="{{item}}">
          <image src="{{item.activityUrl}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
    <view class="more" bindtap="goActiveList">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/more.png" alt="" mode="widthFix" />
    </view>
  </view>
  <!-- 运动 -->
  <view class="lehuo_sport">
    <swiper class="sport_banner" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" display-multiple-items="2.5">
      <block wx:for="{{hotActiveList.banner3}}" wx:key="item">
        <swiper-item bindtap="goActiveInfo" data-item="{{item}}">
          <image src="{{item.activityUrl}}" mode="aspectFill" />
          <view class="sportText">
            {{item.name}}
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="recommend">
    <view class="firstImg">
      <image src="http://www.appsun.com.cn/www/fy/changning/imgs/lehuo/recommend.png" mode="widthFix"></image>
    </view>
    <view class="secondUl">
      <view class="secondlist">
        <view bindtap="choiceList" data-activitytype="" class='{{0==choiceListindex?"active":""}}' data-index="0">
          商圈活动
        </view>
        <view bindtap="choiceList" data-activitytype="0" class='{{1==choiceListindex?"active":""}}' data-index="1">
          热门演出
        </view>
        <view bindtap="choiceList" data-activitytype="1" class='{{2==choiceListindex?"active":""}}' data-index="2">
          最新电影
        </view>
        <view bindtap="choiceList" data-activitytype="3" class='{{3==choiceListindex?"active":""}}' data-index="3">
          休闲活动
        </view>
      </view>
    </view>
  </view>
