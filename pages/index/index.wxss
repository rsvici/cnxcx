/**index.wxss**/
.choice {
  font-size: 22rpx;
  /* margin-top: 80rpx; */
  background-color: #f5f5f5;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  overflow: hidden;
  z-index: 10;
  box-sizing: border-box;
  height: 75rpx;
}

.choice .choiceTop .busi {
  position: absolute;
  left: 40rpx;
  top: 15rpx;
}

.choice .choiceTop .map {
  position: absolute;
  right: 40rpx;
  top: 10rpx;
}

.choice .choiceTop .busi image,
.choice .choiceTop .map image{
  width: 50rpx;
}

.choice .choiceTop {
  height: 60rpx;
  width: 750rpx;
  margin: 0 auto;
  padding-top: 10rpx;
}

.choice .choiceTop form {
  width: 50%;
  background-color: #fff;
  border-radius: 5px;
  height: 55rpx;
  text-align: center;
  padding-left: 60rpx;
  margin: 0 auto;
  position: relative;
  display: block;
}

.choice .choiceTop form image {
  display: block;
  width: 32rpx;
  position: absolute;
  top: 13rpx;
  left: 70rpx;
}

.choice .choiceTop form input {
  display: block;
  margin-left: 75rpx;
  height: 55rpx;
  padding: 0;
  line-height: 55rpx;
  caret-color: rgb(170, 20, 20);
  font-family: PingFangSC-Regular;
  color: #666;
  text-align: left;
}

.choice .choiceTop form input::-webkit-input-placeholder {
  font-family: PingFangSC-Regular;
  line-height: 50rpx;
}

