/* 第三部分演职人员 */
.third .space_banner {
  width: 100%;
  height: 310rpx;
}

.third .space_banner swiper-item {
  padding: 10rpx;
  text-align: right;
  box-sizing: border-box;
  position: relative;
}

.third .space_banner image {
  width: 100%;
  border-radius: 10rpx;
}

.third .space_banner .actorName {
  text-align: left;
  line-height: 40rpx;
  position: absolute;
  bottom: 33rpx;
}

.third .space_banner .actorDesc {
  text-align: left;
  line-height: 30rpx;
  height: 30rpx;
  overflow: hidden;
  color: #7A7E7F;
  position: absolute;
  bottom: 2rpx;
}

/* 第四部分 预告片段/剧照 */
