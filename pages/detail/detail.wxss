/**detail.wxss**/
.detail {
  width: 750rpx;
  min-height: 100vh;
  background-color: #F9FEFF;
  padding-bottom: 4vw;
  font-size: 22rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
/* 收藏 */
.detail .shoucang {
  position: absolute;
  top:4vw;
  right: 3vw;
  width: 10vw;
  z-index: 10;
}
.detail .shoucang image{
  width: 8vw;
}

/* 第一部分 */
.detail .first {
  height: 360rpx;
  width: 100%;
  border-bottom: 1px solid #E8EDEF;
  overflow: hidden;
}

/* 封面 */
.detail .first .left {
  width: 26%;
  float: left;
}

.detail .first .left image {
  width: 100%;
  box-shadow: 8rpx 10rpx 15rpx #aaa;
  border-radius: 10rpx;
  max-height: 280rpx;
}

/* title,date  */
.detail .first .right {
  width: 70%;
  float: left;
  margin-left: 4%;
}

.detail .first .first_item {
  height: 290rpx;
}

.detail .first .right .title {
  font-size: 30rpx;
  font-weight: 700;
  line-height: 60rpx;
  width: 84%;
}

.detail .first .right .intro {
  line-height: 35rpx;
  width: 90%;
  margin: 30rpx 0;
}

.detail .first .right .datetitle {
  line-height: 80rpx;
  font-weight: 700;
  font-size: 25rpx;
}

.detail .first .right .datetime {
  line-height: 40rpx;
  font-size: 24rpx;
}

/* 二级标题 */
.twotitle {
  height: 70rpx;
  line-height: 65rpx;
  font-size: 27rpx;
  font-weight: 700;
}

/* 购票 */
.detail .first .payprice {
  width: 100%;
  height: 75rpx;
  position: relative;
}

.detail .first .payprice .paypriceImg {
  position: absolute;
  bottom: 0rpx;
  right: 20rpx;
  height: 70rpx;
  line-height: 65rpx;
}

.detail .first .payprice .paypriceImg image {
  width: 18rpx;
}

/* 第二部分简介 */
/* 第二部分简介 */
/* 第二部分简介 */
.detail .second,
.detail .third,
.detail .fourth {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #E8EDEF;
}

.second .seconddetail {
  line-height: 35rpx;
  letter-spacing: 2rpx;
}
.second .seconddetail image{
  width: 100%;
  display:block;

}

/* 第三部分演职人员 */
