/* 第四部分 预告片段/剧照 */
.detail .fourth {
  height: 370rpx;
  width: 100%;
}

.detail .fourth .newImgVideo {
  width: 100%;
  overflow-y: auto;
}

.detail .fourth .newImgVideo .newVideoFull {
  white-space: nowrap
}

.detail .fourth .newImgVideo .newVideoFull image {
  height: 300rpx;
}

/* 第五部分 */
.detail .fifth {
  width: 102%;
  margin: 0 -1%;
  box-shadow: 0rpx 0rpx 15rpx #aaa;
  border-radius: 5rpx;
  padding: 1%;
  box-sizing: border-box;
}

.detail .fifth .showOneline {
  border-top: 1px solid #E8EDEF;
  color: #4A83BE;
  line-height: 70rpx;
  text-decoration-line: underline;
}